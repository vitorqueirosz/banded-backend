{
    "compilerOptions": {
      "target": "es2019",
      "module": "commonjs",
      "lib": ["es2019"],
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "./",
      "resolveJsonModule": true,
      "strict": true,
      "noImplicitAny": true,
      "strictPropertyInitialization": false,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "baseUrl": ".",
      "paths": {
          "@src/*": ["./src/*"],
          "@test/*": ["./test/*"],
      },
      "rootDirs": [
          "./src",
          "./test"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }
